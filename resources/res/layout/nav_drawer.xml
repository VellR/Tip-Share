<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_gravity="start" android:orientation="vertical" android:background="@color/window_background" android:paddingLeft="5dp" android:layout_width="300dp" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="start" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="40dp">
        <ImageView android:layout_width="75dp" android:layout_height="75dp" android:src="@drawable/icon"/>
        <TextView android:textSize="40sp" android:textColor="@color/secondary_text_color" android:layout_gravity="center" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TipJar"/>
    </LinearLayout>
    <TextView android:textSize="30sp" android:textColor="@color/primary_text_color" android:id="@+id/navDrawer_weekPeek" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Week Peek"/>
    <View android:background="@color/secondary_color" android:layout_width="200dp" android:layout_height="1dp" android:layout_marginBottom="10dp"/>
    <TextView android:textSize="30sp" android:textColor="@color/primary_text_color" android:id="@+id/navDrawer_motivated" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Motivated"/>
    <View android:background="@color/secondary_color" android:layout_width="200dp" android:layout_height="1dp" android:layout_marginBottom="10dp"/>
    <TextView android:textSize="30sp" android:textColor="@color/primary_text_color" android:id="@+id/navDrawer_fly" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="On-The-Fly"/>
    <View android:background="@color/secondary_color" android:layout_width="200dp" android:layout_height="1dp" android:layout_marginBottom="10dp"/>
    <TextView android:textSize="30sp" android:textColor="@color/primary_text_color" android:id="@+id/navDrawer_stats" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Stats"/>
    <View android:background="@color/secondary_color" android:layout_width="200dp" android:layout_height="1dp" android:layout_marginBottom="10dp"/>
    <Button android:textColor="@color/primary_text_color" android:layout_gravity="center" android:id="@+id/navDrawer_logout" android:background="@color/secondary_color" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:text="Logout"/>
</LinearLayout>
