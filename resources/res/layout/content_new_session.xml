<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/DrawerLayout" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <RelativeLayout android:background="@color/window_background" android:layout_width="match_parent" android:layout_height="match_parent">
        <include layout="@layout/tool_bar"/>
        <com.mikhaellopez.circularprogressbar.CircularProgressBar android:id="@+id/new_sessions_circleProgress" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="65dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true" app:cpb_progressbar_color="@color/primary_color" app:cpb_background_progressbar_color="@color/secondary_color" app:cpb_background_progressbar_width="10dp"/>
        <TextView android:textSize="35sp" android:textColor="@color/primary_text_color" android:id="@+id/new_session_updateTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="79dp" android:layout_marginBottom="20dp" android:text="" android:layout_alignTop="@+id/new_sessions_circleProgress" android:layout_centerHorizontal="true"/>
        <EditText android:textColor="@color/primary_text_color" android:textColorHint="@color/primary_text_color" android:id="@+id/new_session_updateEditText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="New Tip" android:layout_below="@+id/new_session_updateTextView" android:layout_centerHorizontal="true" android:inputType="numberDecimal"/>
        <EditText android:textColor="@color/primary_text_color" android:textColorHint="@color/primary_text_color" android:id="@+id/new_session_updateEditTextTable" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:hint="@string/tablenum" android:layout_below="@+id/new_session_updateEditText" android:layout_centerHorizontal="true" android:inputType="number"/>
        <Button android:textColor="@color/secondary_text_color" android:id="@+id/new_session_updateButton" android:background="@color/secondary_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Update" android:layout_below="@+id/new_session_updateEditTextTable" android:layout_centerHorizontal="true"/>
        <Button android:textColor="@color/secondary_text_color" android:id="@+id/new_session_stopButton" android:background="@color/secondary_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="Stop" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <include layout="@layout/nav_drawer"/>
</android.support.v4.widget.DrawerLayout>
